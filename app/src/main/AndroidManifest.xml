<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!--Permisos de ubicaci칩n:
    Configurados para permitir escalabilidad si en el futuro se implementa tracking de rutas
    No obligatorio para el aceler칩metro, pero los dejo definidos siguiendo un dise침o preventivo-->

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />


    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ActivaSens">

        <!--MainActivity:
        Punto de entrada principal (Launcher).
        Exported="true" porque es la actividad que el sistema operativo debe iniciar al pulsar el icono de la app-->

        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--RealtimeActivity:
        Pantalla para sensores. Exported="false" por seguridad (encapsulamiento),
        para que solo mi propia aplicaci칩n pueda lanzar esta actividad-->

        <activity
            android:name=".RealtimeActivity"
            android:exported="false" />

    </application>

</manifest>